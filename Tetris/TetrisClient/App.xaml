<Application x:Class="TetrisClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TetrisClient"
             StartupUri="UserInterface\Menu.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="Text" Color="#FF2F7FDE"/>
        <SolidColorBrush x:Key="Background" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#FF3E3E3E"/>
        <SolidColorBrush x:Key="PlayerNotAlive" Color="#55FA0F0F"/>
        <Color x:Key="TextColor">#FF2F7FDE</Color>
        <Color x:Key="BackgroundColor">#FF1E1E1E</Color>
        <Color x:Key="BackgroundLightColor">#FF3E3E3E</Color>

        <FontFamily x:Key="MainFont">Futura</FontFamily>
    </Application.Resources>
</Application>
